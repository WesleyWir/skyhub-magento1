<?xml version="1.0"?>
<layout>
    <default>
        <update handle="ADD_STYLES"/>
        <reference name="notifications">
            <block type="bseller_skyhub/adminhtml_notifications_skyhub_configuration" name="bseller.skyhub.notifications.configuration"/>
            <block type="bseller_skyhub/adminhtml_notifications_skyhub_attributes" name="bseller.skyhub.notifications.attributes.mapping"/>
        </reference>
    </default>

    <!-- Catalog Product Attributes Mapping -->
    <adminhtml_bseller_skyhub_catalog_product_attributes_mapping_index>
        <label>Catalog Product Attributes Mapping</label>
        <update handle="ADD_STYLES"/>
        <reference name="content">
            <block type="bseller_skyhub/adminhtml_catalog_product_attributes_mapping"/>
        </reference>
    </adminhtml_bseller_skyhub_catalog_product_attributes_mapping_index>

    <!-- Catalog Product Attributes Mapping Edit -->
    <adminhtml_bseller_skyhub_catalog_product_attributes_mapping_edit>
        <label>Catalog Product Attributes Mapping</label>
        <update handle="ADD_STYLES"/>
        <reference name="content">
            <block type="bseller_skyhub/adminhtml_catalog_product_attributes_mapping_edit"/>
        </reference>
    </adminhtml_bseller_skyhub_catalog_product_attributes_mapping_edit>

    <!-- Integration Pending Products -->
    <adminhtml_bseller_skyhub_queue_pendingproducts>
        <label>Integration Pending Products</label>
    </adminhtml_bseller_skyhub_queue_pendingproducts>

    <!-- Products With Integration Error -->
    <adminhtml_bseller_skyhub_queue_errorproducts>
        <label>Products With Integration Errors</label>
    </adminhtml_bseller_skyhub_queue_errorproducts>

    <ADD_STYLES>
        <reference name="head">
            <action method="addCss">
                <name>bseller/skyhub/css/styles.css</name>
            </action>
        </reference>
    </ADD_STYLES>
</layout>
